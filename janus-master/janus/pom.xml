    <modelVersion>4.0.0</modelVersion>

    <artifactId>janus</artifactId>

    <repositories>

        <repository>
            <id>nexus</id>
            <name>local private nexus</name>
            <url>http://132.122.1.152:8081/nexus/content/groups/public</url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>always</updatePolicy>
            </releases>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>always</updatePolicy>
            </snapshots>
        </repository>

        <repository>
            <id>releases</id>
            <name>Internal releases2</name>
            <url>http://132.122.1.152:8081/nexus/content/repositories/releases</url>
        </repository>
        <repository>
            <id>snapshots</id>
            <name>snapshots</name>
            <url>http://132.122.1.152:8081/nexus/content/repositories/snapshots</url>
        </repository>


        <repository>
            <id>springsource-repo</id>
            <name>SpringSource Repository</name>
            <url>http://repo.springsource.org/release</url>
