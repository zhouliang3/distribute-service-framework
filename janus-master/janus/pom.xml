                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <phase>package</phase>
                        <goals>
                            <goal>jar-no-fork</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-javadoc-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-javadoc</id>
                        <phase>deploy</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <show>public</show>
                    <charset>UTF-8</charset>
                    <encoding>UTF-8</encoding>
                    <docencoding>UTF-8</docencoding>
                    <excludePackageNames>com.ctg.itrdc.com.*</excludePackageNames>
                    <links>
                        <link>http://docs.oracle.com/javase/6/docs/api</link>
                    </links>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>1.4</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <createSourcesJar>true</createSourcesJar>
                            <promoteTransitiveDependencies>true</promoteTransitiveDependencies>
                            <artifactSet>
                                <includes>
                                    <include>com.ctg.itrdc:janus-common</include>
                                    <include>com.ctg.itrdc:janus-remoting-api</include>
                                    <include>com.ctg.itrdc:janus-remoting-netty</include>
                                    <include>com.ctg.itrdc:janus-remoting-http</include>
                                    <include>com.ctg.itrdc:janus-remoting-zookeeper</include>
                                    <include>com.ctg.itrdc:janus-rpc-api</include>
                                    <include>com.ctg.itrdc:janus-rpc-default</include>
                                    <include>com.ctg.itrdc:janus-rpc-injvm</include>
                                    <include>com.ctg.itrdc:janus-rpc-rmi</include>
                                    <include>com.ctg.itrdc:janus-rpc-http</include>
                                    <include>com.ctg.itrdc:janus-rpc-rest</include>
                                    <include>com.ctg.itrdc:janus-filter-validation</include>
                                    <include>com.ctg.itrdc:janus-filter-cache</include>
                                    <include>com.ctg.itrdc:janus-cluster</include>
                                    <include>com.ctg.itrdc:janus-registry-api</include>
                                    <include>com.ctg.itrdc:janus-registry-zookeeper</include>
                                    <include>com.ctg.itrdc:janus-monitor-api</include>
                                    <include>com.ctg.itrdc:janus-config-api</include>
                                    <include>com.ctg.itrdc:janus-config-spring</include>
                                    <include>com.ctg.itrdc:janus-container-api</include>
                                    <include>com.ctg.itrdc:janus-container-spring</include>
                                    <include>com.ctg.itrdc:janus-container-javaconfig</include>
                                    <include>com.ctg.itrdc:janus-container-jetty</include>
                                    <include>com.ctg.itrdc:janus-container-log4j</include>
                                    <include>com.ctg.itrdc:janus-container-logback</include>
                                </includes>
                            </artifactSet>
                            <transformers>
                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                                    <resource>META-INF/janus/internal/com.ctg.itrdc.janus.common.compiler.Compiler</resource>
                                </transformer>
                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                                    <resource>META-INF/janus/internal/com.ctg.itrdc.janus.common.extension.ExtensionFactory</resource>
                                </transformer>
                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                                    <resource>META-INF/janus/internal/com.ctg.itrdc.janus.common.serialize.Serialization</resource>
                                </transformer>
                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                                    <resource>META-INF/janus/internal/com.ctg.itrdc.janus.common.status.StatusChecker</resource>
                                </transformer>
                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                                    <resource>META-INF/janus/internal/com.ctg.itrdc.janus.common.threadpool.ThreadPool</resource>
                                </transformer>
                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                                    <resource>META-INF/janus/internal/com.ctg.itrdc.janus.remoting.Dispatcher</resource>
                                </transformer>
                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                                    <resource>META-INF/janus/internal/com.ctg.itrdc.janus.remoting.Codec2</resource>
                                </transformer>
                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                                    <resource>META-INF/janus/internal/com.ctg.itrdc.janus.remoting.Transporter</resource>
                                </transformer>
                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                                    <resource>META-INF/janus/internal/com.ctg.itrdc.janus.remoting.exchange.Exchanger</resource>
                                </transformer>
                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                                    <resource>META-INF/janus/internal/com.ctg.itrdc.janus.remoting.http.HttpBinder</resource>
                                </transformer>

                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                                    <resource>META-INF/janus/internal/com.ctg.itrdc.janus.remoting.telnet.TelnetHandler</resource>
                                </transformer>
                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                                    <resource>META-INF/janus/internal/com.ctg.itrdc.janus.remoting.zookeeper.ZookeeperTransporter</resource>
                                </transformer>
                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                                    <resource>META-INF/janus/internal/com.ctg.itrdc.janus.rpc.Protocol</resource>
                                </transformer>
                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                                    <resource>META-INF/janus/internal/com.ctg.itrdc.janus.rpc.Filter</resource>
                                </transformer>
                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                                    <resource>META-INF/janus/internal/com.ctg.itrdc.janus.rpc.InvokerListener</resource>
                                </transformer>
                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                                    <resource>META-INF/janus/internal/com.ctg.itrdc.janus.rpc.ExporterListener</resource>
                                </transformer>
                                <transformer
