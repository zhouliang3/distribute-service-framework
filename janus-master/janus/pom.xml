                                    <resource>META-INF/janus/internal/com.ctg.itrdc.janus.rpc.cluster.Cluster</resource>
                                </transformer>
                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                                    <resource>META-INF/janus/internal/com.ctg.itrdc.janus.rpc.cluster.LoadBalance</resource>
                                </transformer>
