                                    <include>com.ctg.itrdc:janus-rpc-injvm</include>
                                    <include>com.ctg.itrdc:janus-rpc-rmi</include>
                                    <include>com.ctg.itrdc:janus-rpc-hessian</include>
                                    <include>com.ctg.itrdc:janus-rpc-http</include>
                                    <include>com.ctg.itrdc:janus-rpc-webservice</include>
                                    <!--inote 暂时注释掉
                                    <include>com.ctg.itrdc:janus-rpc-thrift</include>
                                    -->
